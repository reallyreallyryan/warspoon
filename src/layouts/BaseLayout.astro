---
import BaseHead from '../components/BaseHead.astro';
import Analytics from '../components/Analytics.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
  image?: string;
  ogType?: string;
  publishedDate?: Date;
  modifiedDate?: Date;
  noindex?: boolean;
}

const { title, description, image, ogType, publishedDate, modifiedDate, noindex } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} ogType={ogType} publishedDate={publishedDate} modifiedDate={modifiedDate} noindex={noindex} />
    <Analytics />
    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1 mx-auto w-full max-w-5xl px-4 py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
