---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import TagFilter from '../components/TagFilter.astro';
import { getCollection } from 'astro:content';
import { getFilterableTags } from '../lib/tags';

const posts = (await getCollection('workshop', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const allTags = getFilterableTags(posts);
---

<BaseLayout title="Warhammer 40K Painting Tutorials & Paint Recipes" description="Step-by-step painting tutorials, paint recipes, 3D printing guides, and miniature hobby projects for Warhammer 40K and tabletop wargaming.">
  <h1 class="text-3xl font-bold mb-6">Workshop</h1>
  <TagFilter tags={allTags} />
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {posts.map((post) => (
      <PostCard
        id={post.id}
        title={post.data.title}
        description={post.data.description}
        date={post.data.date}
        tags={post.data.tags}
        cover={post.data.cover}
        coverAlt={post.data.coverAlt}
      />
    ))}
  </div>
</BaseLayout>
