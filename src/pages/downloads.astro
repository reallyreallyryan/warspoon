---
import BaseLayout from '../layouts/BaseLayout.astro';
import JsonLd from '../components/JsonLd.astro';
import DownloadCard from '../components/DownloadCard.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

const posts = (await getCollection('workshop', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const allDownloads = posts.flatMap((post) =>
  (post.data.downloads ?? []).map((dl) => ({
    ...dl,
    postId: post.id,
    postTitle: post.data.title,
    cover: post.data.cover,
    coverAlt: post.data.coverAlt,
  })),
);

const downloadsSchema = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Free STL Files for Miniature Bases & Terrain',
  description: 'Download free 3D-printable STL files for 28mm miniature bases and terrain. Designed in Blender, tested on FDM printers.',
  url: 'https://warspoon.com/downloads/',
  mainEntity: {
    '@type': 'ItemList',
    itemListElement: allDownloads.map((dl, i) => ({
      '@type': 'ListItem',
      position: i + 1,
      item: {
        '@type': '3DModel',
        name: dl.label,
        contentUrl: dl.url,
        encodingFormat: 'model/stl',
        isAccessibleForFree: true,
        isPartOf: {
          '@type': 'Article',
          name: dl.postTitle,
          url: `https://warspoon.com/workshop/${dl.postId}/`,
        },
      },
    })),
  },
};
---

<BaseLayout title="Free STL Files for Miniature Bases & Terrain" description="Download free 3D-printable STL files for 28mm miniature bases and terrain. Designed in Blender, tested on FDM printers.">
  <JsonLd schema={downloadsSchema} />
  <h1 class="text-3xl font-bold mb-6">Downloads</h1>
  <p class="text-(--color-text-secondary) mb-8">
    Free STL files and resources from Workshop posts. All files link to their original hosts.
  </p>
  {allDownloads.length === 0 ? (
    <p class="text-(--color-text-secondary)">No downloads available yet.</p>
  ) : (
    <div class="grid gap-4 sm:grid-cols-2">
      {allDownloads.map(({ label, url, host, postTitle, postId, cover, coverAlt }) => (
        <div class="overflow-hidden rounded-lg border border-(--color-border)">
          {cover && (
            <a href={`/workshop/${postId}/`} class="block group">
              <Image
                src={cover}
                alt={coverAlt || postTitle}
                widths={[400, 800]}
                sizes="(max-width: 640px) 100vw, 50vw"
                class="w-full aspect-video object-cover transition-transform group-hover:scale-105"
                loading="lazy"
              />
            </a>
          )}
          <div class="p-4">
            <DownloadCard label={label} url={url} host={host} />
            <p class="mt-1 text-xs text-(--color-text-secondary)">
              From: <a href={`/workshop/${postId}/`} class="hover:text-(--color-accent) transition-colors">{postTitle}</a>
            </p>
          </div>
        </div>
      ))}
    </div>
  )}
</BaseLayout>
